<link rel='stylesheet' type='text/css' href='/css/signup.css'>
<div class="container">
    <section id="content">
        <form action="/users/create" method='post'>
            <h1>Sign Up</h1>
            <div>
                <input type="text" name='name' placeholder="Enter Your name" required="" id="password" />
            </div>
            <div>
                <input type="text" name='email' placeholder="Type Email" required="" id="username" />
            </div>
            <div>
                <input type="password" name='password' placeholder="Type Password" required="" id="username" />
            </div>
            <div>
                <input type="password" name='re_password' placeholder="Re-type Password" required="" id="username" />
            </div>
            <div>
                <div class="form-group col-md-12">
                    
                    <select name='gender' id="inputState" class="form-control">
                      <option selected>Gender</option>
                      <option>Male</option>
                      <option>Female</option>
                      <option>Other</option>
                    </select>
                  </div>
               
            </div>
            <div>
                <input type="text" name='mobile' placeholder="Enter Mobile number" required=""   />
            </div>

           
            <div>
                <input type="submit" value="Sign Up" />
                
                <a href="/users/signin">Already have an account? Click here</a>
            </div>
        </form><!-- form -->
        
    </section><!-- content -->
</div><!-- container -->