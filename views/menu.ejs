<link rel='stylesheet' type='text/css' href='/css/menu.css'>
<div id='menu_screen'>
        <div id='list_screen'>
            <h3 style="color: crimson;">Snacks : </h3>
            <ul>
                 
                <% for(item of restaurant.snacks){%>
                  <div id='item_div'>
                    <div >
                      <div> <h6 style="color: rgb(3, 151, 11);display: inline-block;"><strong>Item Name : </strong></h6>    <%=item.name%>  </div>
                      <div>  <h6 style="color:orange;display: inline-block"> <strong>Price : </strong></h6>   <%=item.price%> </div>
                   </div>
                   <div><a class="btn btn-primary add_btn" data='<%=item.id%>' value="<%=item.id%>" role="button">ADD ITEM + </a> </div>
                  </div> 
                <%}%>
            </ul>
            <h3 style="color: crimson;"> Maincourse : </h3>
            <ul>
                <% for(item of restaurant.maincourse){%>
                  <div id='item_div'>
                    <div >
                      <div> <h6 style="color: rgb(3, 151, 11);display: inline-block;"><strong>Item Name : </strong></h6>    <%=item.name%>  </div>
                      <div>  <h6 style="color:orange;display: inline-block"> <strong>Price : </strong></h6>   <%=item.price%> </div>
                   </div>
                   <div><a class="btn btn-primary add_btn" data='<%=item.id%>' value="<%=item.id%>" role="button">ADD ITEM + </a> </div>
                  </div> 
                <%}%>
            </ul>
           
            <h3 style="color: crimson;"> Drinks : </h3>
            <ul>
                <% for(item of restaurant.drinks){%>
                  <div id='item_div'>
                    <div >
                      <div> <h6 style="color: rgb(3, 151, 11);display: inline-block;"><strong>Item Name : </strong></h6>    <%=item.name%>  </div>
                      <div>  <h6 style="color:orange;display: inline-block"> <strong>Price : </strong></h6>   <%=item.price%> </div>
                   </div>
                   <div><a class="btn btn-primary add_btn" data="<%=item.id%> " value="<%=item.id%>" role="button">ADD ITEM + </a> </div>
                  </div> 
                <%}%>
            </ul>







        </div>
